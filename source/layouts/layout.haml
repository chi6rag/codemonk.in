!!! 5
%html
  %head
    %title CodeMonk
    %meta{:charset => "utf-8"}
    %meta{:content => "CodeMonk", :name => "description"}
    %meta{:content => "on", "http-equiv" => "cleartype"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0", :name => "viewport"}
    %link{:href => "http://fonts.googleapis.com/css?family=Lato:300,400,700|Montserrat:700", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "stylesheets/style.css", :rel => "stylesheet"}
    %link{:rel => "icon", :type => "image/png", :href => "/favicon.png"}

  %body
    %nav#codemonk-menu.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %button.hidden.navbar-toggle{"data-target" => "#navbar-collapsable", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"}
            = image_tag "codemonk-logo.png", :alt => "CodeMonk"
        #navbar-collapsable.collapse.navbar-collapse
          %ul#menu.nav.navbar-nav.navbar-right.hidden
            %li
              = link_to "About", "/"
    = yield
    = javascript_include_tag "main"
